# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=60s

# Mode (CONSUMER, SERVER)
# MODE=CONSUMER
MODE=SERVER

# Database Configuration
MONGODB_URI=mongodb://admin:password123@localhost:27017/wallet_db?authSource=admin
MONGODB_DATABASE=wallet_db

# Queue Provider Selection (rabbitmq, kafka, redis)
QUEUE_PROVIDER=rabbitmq

# RabbitMQ Configuration
RABBITMQ_URI=amqp://admin:password123@localhost:5672/
RABBITMQ_QUEUE_NAME=wallet_queue
RABBITMQ_EXCHANGE=
RABBITMQ_ROUTING_KEY=wallet_queue
RABBITMQ_CONSUMER_TAG=wallet_consumer
RABBITMQ_PREFETCH_COUNT=1
RABBITMQ_RECONNECT_DELAY=5s
RABBITMQ_REQUEST_TIMEOUT=60s

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC=wallet-transactions
KAFKA_RESPONSE_TOPIC=wallet-responses
KAFKA_CONSUMER_GROUP=wallet-service
KAFKA_BATCH_SIZE=100
KAFKA_BATCH_TIMEOUT=1s
KAFKA_REQUEST_TIMEOUT=30s

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=password123
REDIS_DB=0
REDIS_QUEUE_NAME=wallet:transactions
REDIS_RESPONSE_QUEUE_NAME=wallet:responses
REDIS_CONSUMER_GROUP=wallet-service
REDIS_BLOCK_TIME=5s
REDIS_REQUEST_TIMEOUT=30s
REDIS_MAX_RETRIES=3

# Cache Configuration (Optional Redis Cache)
CACHE_ENABLED=false
CACHE_REDIS_ADDR=localhost:6379
CACHE_REDIS_PASSWORD=
CACHE_REDIS_DB=1
CACHE_TTL=300

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=text

# Environment
GO_ENV=development
